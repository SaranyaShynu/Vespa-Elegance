<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Vespa Elegance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/admin.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f4f4f4;
        }

        img {
            width: 80px;
            height: auto;
            border-radius: 8px;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 4px;
            text-decoration: none;
            margin: 2px;
        }

        .btn-edit {
            background: #9c5b9c;
            color: white;
        }

        .btn-delete {
            background: #f44336;
            color: white;
        }
    </style>
</head>

<body>

    <%- include("../partials/admin/header") %>
        <div class="admin-container">
            <%- include("../partials/admin/sidebar") %>

                <main class="admin-main dashboard-main">
                    <h1>Order Details</h1>

                    <p><strong>Order ID:</strong>
                        <%= order.orderId %>
                    </p>
                    <p><strong>User Email:</strong>
                        <%= order.user.email || 'N/A' %>
                    </p>
                    <p><strong>Amount:</strong> ₹<%= order.price %>
                    </p>
                    <p><strong>Coupon Discount:</strong> ₹<%= order.discount || 0 %></p>
<p><strong>Total Price:</strong> ₹<%= order.finalPrice %></p>
                    <p><strong>Payment Method:</strong>
                        <%= order.paymentMethod %>
                    </p>
                    <p><strong>Payment Status:</strong>
                        <%= order.paymentStatus %>
                    </p>
                    <p><strong>Status:</strong>
                        <%= order.status %>
                    </p>
                    <p><strong>Order Date:</strong>
                        <%= order.createdAt.toDateString() %>
                    </p>
                    <p><strong>Address:</strong>
                          <% if (order.address) { %>
    <%= order.address.street %>, 
    <%= order.address.city %>, 
    <%= order.address.state %> - <%= order.address.zip %>
  <% } else { %>
    N/A
  <% } %>
                    </p>
                    <p><strong>Alt. Address:</strong>
                         <% if (order.alternativeAddress) { %>
    <%= order.alternativeAddress.street %>, 
    <%= order.alternativeAddress.city %>, 
    <%= order.alternativeAddress.state %> - <%= order.alternativeAddress.zip %>
  <% } else { %>
    N/A
  <% } %>
                    </p>
                    <hr>

                    <h3>Products</h3>
                    <% if (order.products && order.products.length> 0) { %>
                        <ul>
                            <% order.products.forEach(product=> { %>
                                <li>
                                    <img src="/<%= product.productId.image %>" width="80" alt="Product Image" />
                                    <p><strong>Name:</strong>
                                        <%= product.productId.name %>
                                    </p>
                                    <p><strong>Quantity:</strong>
                                        <%= product.quantity %>
                                    </p>
                                    <p><strong>Price:</strong> ₹<%= product.productId.price %>
                                    </p>
                                </li>
                                <hr>
                                <% }) %>
                        </ul>
                        <% } else { %>
                            <p>No products in this order.</p>
                            <% } %>
                            <% if (
      order.paymentMethod !== 'COD' && 
      order.paymentStatus === 'Paid' && 
      (order.status === 'Processing' || order.status === 'Delivered')
) { %>
    <form action="/admin/orders/<%= order._id %>/refund" method="POST"
          onsubmit="return confirm('Are you sure you want to refund this order?');">
        <button type="submit"
            style="background-color: red; color: white; padding: 8px 12px; border: none; cursor: pointer;">
            Refund Order
        </button>
    </form>
<% } else if (order.paymentStatus === 'Refunded') { %>
    <p><strong>Status:</strong> ✅ Refunded</p>
<% } %>

                                            <a href="/admin/orders">← Back to Orders</a>
                </main>
        </div>
        <%- include("../partials/admin/footer") %>
</body>

</html>