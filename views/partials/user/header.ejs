<body>

  <div class="site-wrap">
    <header class="site-navbar" role="banner">
      <div class="site-navbar-top">
        <div class="container">
          <div class="row align-items-center">

            <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
              <form action="" class="site-block-top-search">
                <span class="icon icon-search2"></span>
                <input type="text" class="form-control border-0" placeholder="Search">
              </form>
            </div>

            <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
              <div class="site-logo">
                <a href="index.html" class="js-logo-clone">Vespa Elegance</a>
              </div>
            </div>

            <div class="col-6 col-md-4 order-3 order-md-3 text-right">
              <div class="site-top-icons">

                <ul>
                  <li><a href="#"><span class="icon icon-person"></span></a></li>
                  <li><a href="#"><span class="icon icon-heart-o"></span></a></li>
                  <li>
                    <a href="cart.html" class="site-cart position-relative">
                      <span class="icon icon-shopping_cart"></span>
                      <span class="cart-count badge">2</span>
                    </a>
                  </li>
                  <li class="d-inline-block d-md-none ml-md-0"><a href="#" class="site-menu-toggle js-menu-toggle"><span
                        class="icon-menu"></span></a></li>
                </ul>
              </div>
            </div>

          </div>
        </div>
      </div>
      <nav class="site-navigation text-right text-md-center" role="navigation">
        <div class="container">
          <div class="d-flex align-items-center justify-content-between">
            <img src="/images/vtag.jpg" alt="Vespa" style="height: 50px; margin-right: 20px;">

            <ul class="site-menu js-clone-nav d-none d-md-block mb-0">
              <li><a href="/user/home">Home</a></li>
              <li><a href="about.html">Models</a></li>
              <li><a href="/user/service">Services</a></li>
              <li><a href="#">Featured</a></li>
              <li><a href="#">Reviews</a></li>
              <li><a href="contact.html">Contact</a></li>
            </ul>
            <ul class="d-flex align-items-center list-unstyled mb-0">
              <% if (isLoggedIn) { %>
                <li class="ml-2 text-dark blue">Welcome  <%=   welcomeMessage %>
                </li>
                <li class="ml-3"><a href="/logout" class="btn btn-sm" style="background-color: #003366; color: white;">Logout</a></li>
                <% } else { %>

                  <li class="ml-2">
                    <a href="/login" class="btn btn-sm" style="background-color: #003366; color: white;">Login</a>
                  </li>
                  <li class="ml-2">
                    <a href="/signUp" class="btn btn-sm" style="background-color: #003366; color: white;">Sign Up</a>
                  </li>

                  <!-- <li class="ml-2"><a href="/login" class="btn btn-sm btn-outline-light">Login</a></li>
                  <li class="ml-2"><a href="/signup" class="btn btn-sm btn-primary">Sign Up</a></li> -->
                  <% } %>

                    <!-- Mobile menu toggle (optional, for responsive view) -->
                    <li class="d-inline-block d-md-none ml-md-0">
                      <a href="#" class="site-menu-toggle js-menu-toggle">
                        <span class="icon-menu"></span>
                      </a>
                    </li>
            </ul>
          </div>
        </div>
      </nav>
