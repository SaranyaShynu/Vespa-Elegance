<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile - Vespa Elegance</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .profile-container { max-width: 900px; margin: 40px auto; }
    .profile-pic { width: 120px; height: 120px; object-fit: cover; border-radius: 50%; }
    .address-box { border: 1px solid #ddd; padding: 15px; border-radius: 6px; margin-bottom: 15px; }
    .add-address-btn { margin-top: 10px; }
  </style>
</head>
<body>
  <%- include('../partials/user/header', { user: user, isLoggedIn: isLoggedIn }) %>

  <div class="container profile-container">
    <h2 class="mb-4">My Profile</h2>

    <div class="row">
      <div class="col-md-4 text-center">
        <img src="<%= user.profilePic || '/images/default-avatar.png' %>" class="profile-pic mb-3" alt="Profile Pic">
        <form action="/profile/upload-photo" method="POST" enctype="multipart/form-data">
          <input type="file" name="profilePic" class="form-control mb-2" required>
          <button type="submit" class="btn btn-primary btn-sm w-100">Upload Photo</button>
        </form>
      </div>

      <div class="col-md-8">
        <form action="/profile/update" method="POST">
          <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" name="name" class="form-control" value="<%= user.name %>" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" value="<%= user.email %>" disabled>
          </div>
          <div class="mb-3">
            <label class="form-label">Phone</label>
            <input type="text" name="phone" class="form-control" value="<%= user.mobileno || '' %>">
          </div>
          <button type="submit" class="btn btn-success w-100">Update Profile</button>
        </form>
      </div>
    </div>

    <hr class="my-5">

    <h3>Addresses</h3>
    <div class="addresses">
      <% if (user.addresses && user.addresses.length > 0) { %>
        <% user.addresses.forEach((addr, idx) => { %>
          <div class="address-box">
            <p><strong>Address <%= idx + 1 %>:</strong></p>
            <p><%= addr.street %>, <%= addr.city %>, <%= addr.state %>, <%= addr.country %> - <%= addr.zip %></p>
            <p>Phone: <%= addr.phone %></p>
            <form action="/profile/address/<%= addr._id %>/delete" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        <% }) %>
      <% } else { %>
        <p>No addresses found. Add one below.</p>
      <% } %>
    </div>

    <form action="/profile/address/add" method="POST">
      <h5 class="mt-4">Add New Address</h5>
      <div class="row g-2">
        <div class="col-md-6"><input type="text" name="street" class="form-control" placeholder="Street" required></div>
        <div class="col-md-6"><input type="text" name="city" class="form-control" placeholder="City" required></div>
        <div class="col-md-6"><input type="text" name="state" class="form-control" placeholder="State" required></div>
        <div class="col-md-6"><input type="text" name="country" class="form-control" placeholder="Country" required></div>
        <div class="col-md-6"><input type="text" name="zip" class="form-control" placeholder="Zip" required></div>
        <div class="col-md-6"><input type="text" name="phone" class="form-control" placeholder="Phone" required></div>
      </div>
      <button type="submit" class="btn btn-primary add-address-btn">Add Address</button>
    </form>

    <hr class="my-5">
    <a href="/myorders" class="btn btn-outline-dark w-100">View My Orders</a>
  </div>

  <%- include('../partials/user/footer') %>
</body>
</html>
