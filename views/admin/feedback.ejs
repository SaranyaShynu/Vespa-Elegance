<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Vespa Elegance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/admin.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f4f4f4;
        }

        img {
            width: 80px;
            height: auto;
            border-radius: 8px;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 4px;
            text-decoration: none;
            margin: 2px;
        }

        .btn-edit {
            background: #9c5b9c;
            color: white;
        }

        .btn-delete {
            background: #f44336;
            color: white;
        }
    </style>
</head>

<body>

    <%- include("../partials/admin/header") %>
        <div class="admin-container">
            <%- include("../partials/admin/sidebar") %>

                <main class="admin-main dashboard-main">
                  <h1>User Feedback</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Email</th>
      <th>Message</th>
      <th>Response</th>
    </tr>
  </thead>
  <tbody>
    <% if (messages.length === 0) { %>
      <tr><td colspan="5">No feedback found.</td></tr>
    <% } else { %>
      <% messages.forEach(msg => { %>
        <tr>
          <td><%= msg.createdAt.toLocaleString() %></td>
          <td><%= msg.user ? msg.user.name : msg.name %></td>
          <td><%= msg.user ? msg.user.email : msg.email %></td>
          <td><%= msg.message %></td>
          <td>
            <form action="/admin/feedback/<%= msg._id %>/response" method="POST">
              <textarea name="response" rows="2" class="form-control"><%= msg.response %></textarea>
              <button type="submit" class="btn btn-sm btn-primary mt-1">Reply</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>


                </main>
        </div>
        <%- include("../partials/admin/footer") %>
</body>

</html>