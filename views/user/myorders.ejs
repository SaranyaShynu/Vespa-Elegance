<h2>My Orders</h2>
<table>
  <tr>
    <th>Order ID</th>
    <th>Date</th>
    <th>Amount</th>
    <th>Status</th>
    <th>Payment</th>
    <th>Action</th>
  </tr>
  <% if (orders.length === 0) { %>
    <tr>
      <td colspan="6">You have not placed any orders yet.</td>
    </tr>
  <% } else { %>
    <% orders.forEach(order => { %>
      <tr>
        <td><%= order.orderId %></td>
        <td><%= order.createdAt.toDateString() %></td>
        <td>â‚¹<%= order.amount %></td>
        <td><%= order.status %></td>
        <td><%= order.paymentStatus %></td>
        <td><a href="/myorders/<%= order._id %>">View</a></td>
      </tr>
    <% }) %>
  <% } %>
</table>
