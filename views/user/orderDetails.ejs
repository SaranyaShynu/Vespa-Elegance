<h2>Order Details</h2>

<p><strong>Order ID:</strong> <%= order.orderId %></p>
<p><strong>Order Status:</strong> <%= order.orderStatus %></p>
<p><strong>Payment Status:</strong> <%= order.paymentStatus %></p>

<h3>Products:</h3>
<% order.products.forEach(item => { %>
  <div>
    <p><strong><%= item.productId.name %></strong> × <%= item.quantity %> = ₹<%= item.price %></p>
  </div>
<% }) %>

<p><strong>Price:</strong> ₹<%= order.price %></p>
<p><strong>Discount:</strong> ₹<%= order.discount %></p>
<p><strong>Total:</strong> ₹<%= order.finalPrice %></p>

<h3>Address:</h3>
<p>
  <%= order.address.name %>, <%= order.address.street %>, 
  <%= order.address.city %>, <%= order.address.state %> - <%= order.address.zip %>
</p>

<% if (order.orderStatus === 'Delivered') { %>
  <form method="GET" action="/invoice/<%= order._id %>">
    <button class="btn btn-primary">Download Invoice</button>
  </form>
<% } else if (order.orderStatus === 'Cancelled' || order.paymentStatus === 'Refunded') { %>
  <p>Order ID: <%= order.orderId %></p>
<% } %>

<a href="/myorders">← Back to My Orders</a>
