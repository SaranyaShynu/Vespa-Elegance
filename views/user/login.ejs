<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Login | Vespa Elegance</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    body {
      font-family: "Segoe UI", sans-serif;
      background: linear-gradient(135deg, #e0e7ff, #fef6f9);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .login-box {
      background: white;
      padding: 40px 35px;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 370px;
    }

    .login-box h2 {
      text-align: center;
      margin-bottom: 30px;
      color: #333;
      font-size: 26px;
      font-weight: 600;
    }

    .login-box form input {
      width: 100%;
      padding: 12px 14px;
      margin-bottom: 18px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 15px;
      box-sizing: border-box;
      transition: 0.3s;
    }

    .login-box form input:focus {
      border-color: #1e90ff;
      outline: none;
      box-shadow: 0 0 5px rgba(30, 144, 255, 0.3);
    }

    .login-box button {
      width: 100%;
      padding: 12px;
      background-color: #1e90ff;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: 0.3s;
    }

    .login-box button:hover {
      background-color: #0078e7;
    }

    .google-btn {
      margin-top: 18px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      width: 100%;
      background-color: #ffffff;
      border: 1px solid #ccc;
      color: #444;
      font-weight: 500;
      font-size: 15px;
      border-radius: 6px;
      padding: 10px 0;
      text-decoration: none;
      transition: 0.3s;
    }

    .google-btn img {
      width: 22px;
      height: 22px;
    }

    .google-btn:hover {
      background-color: #f5f5f5;
      border-color: #1e90ff;
      color: #1e90ff;
    }

    .login-box p {
      text-align: center;
      margin-top: 18px;
      font-size: 14px;
      color: #555;
    }

    .login-box a {
      color: #1e90ff;
      text-decoration: none;
    }

    .login-box a:hover {
      text-decoration: underline;
    }

    .alert {
      background-color: #ffe0e0;
      color: #d93025;
      padding: 10px;
      text-align: center;
      border-radius: 5px;
      margin-bottom: 15px;
      font-size: 14px;
    }
  </style>
</head>

<body>
  <div class="login-box">
    <h2>Vespa Elegance Login</h2>

    <form action="/user/login" method="POST">
      <input type="email" name="email" placeholder="Email" required />
      <input type="password" name="password" placeholder="Password" required />

      <% if (message && message.length > 0) { %>
      <div class="alert"><%= message %></div>
      <% } %>

      <button type="submit">Login</button>
    </form>

    <a href="/auth/google" class="google-btn">
      <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" />
      Sign in with Google
    </a>

    <p>Don't have an account? <a href="/signUp">Sign up</a></p>
    <p><a href="/forgotPassword">Forgot password?</a></p>
  </div>

  <!-- SweetAlert -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if (typeof success !== 'undefined' && success.length > 0) { %>
  <script>
    Swal.fire({
      icon: "success",
      title: "<%= success %>",
      showConfirmButton: false,
      timer: 2000
    })
  </script>
  <% } %>
</body>
</html>
