<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Vespa Elegance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/admin.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f4f4f4;
        }

        img {
            width: 80px;
            height: auto;
            border-radius: 8px;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 4px;
            text-decoration: none;
            margin: 2px;
        }

        .btn-edit {
            background: #9c5b9c;
            color: white;
        }

        .btn-delete {
            background: #f44336;
            color: white;
        }
    </style>
</head>

<body>

    <%- include("partials/admin/header") %>
        <div class="admin-container">
            <%- include("partials/admin/sidebar") %>

                <main class="admin-main dashboard-main">
                <h1>Coupon Management</h1>
                   <h2>Add Coupon</h2>

    <form method="POST" action="/admin/coupons/add" class="row g-3 p-4 bg-#9c4b9c p-4 rounded shadow-sm" style="background-color: #9c5b9c;">
        
      <div class="col-md-3">
        <label for="code" class="form-label">Coupon Code</label>
        <input type="text" name="code" id="code" class="form-control" required>
      </div>

      <div class="col-md-3">
        <label for="discountType" class="form-label">Discount Type</label>
        <select name="discountType" id="discountType" class="form-select" required>
          <option value="">Select</option>
          <option value="percentage">Percentage (%)</option>
          <option value="fixed">Fixed Amount (₹)</option>
        </select>
      </div>

      <div class="col-md-2">
        <label for="discountValue" class="form-label">Value</label>
        <input type="number" name="discountValue" id="discountValue" class="form-control" required>
      </div>

      <div class="col-md-3">
        <label for="expireOn" class="form-label">Expiry Date</label>
        <input type="date" name="expiredOn" id="expiredOn" class="form-control" required>
      </div>
      
      <div class="col-md-1 d-flex align-items-end">
        <button type="submit" class="btn btn-success w-100">Add Coupon</button>
      </div>
    </form>

    <!-- Coupon List Section -->
    <h2>Coupon List</h2>

    
      <table>
        <thead>
          <tr>
            <th>Code</th>
            <th>Type</th>
            <th>Value</th>
            <th>Expiry</th>
            <th>Used By</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (coupons.length === 0) { %>
            <tr>
              <td colspan="6" class="text-center">No coupons found.</td>
            </tr>
          <% } else { %>
            <% coupons.forEach(coupon => { %>
              <tr>
                <td><%= coupon.code %></td>
                <td><%= coupon.discountType === 'percentage' ? '%' : '₹' %></td>
                <td><%= coupon.discountValue %></td>
                <td><%= coupon.expiredOn.toISOString().split('T')[0] %></td>
                <td><%= coupon.usedBy.length %></td>
                <td>
                  <a href="/admin/coupons/delete/<%= coupon._id %>" class="btn btn-danger btn-sm"
                    onclick="return confirm('Are you sure you want to delete this coupon?')">
                    Delete
                  </a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>

                </main>
        </div>
        <%- include("partials/admin/footer") %>
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

<!-- Add Coupon Modal -->
<div class="modal fade" id="addCouponModal" tabindex="-1" aria-labelledby="addCouponLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form method="POST" action="/admin/coupons/add" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCouponLabel">Add New Coupon</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="mb-3">
                    <label for="code" class="form-label">Coupon Code</label>
                    <input type="text" class="form-control" name="code" id="code" required>
                </div>

                <div class="mb-3">
                    <label for="discountType" class="form-label">Discount Type</label>
                    <select name="discountType" id="discountType" class="form-select" required>
                        <option value="">Select Type</option>
                        <option value="percentage">Percentage (%)</option>
                        <option value="fixed">Fixed Amount (₹)</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="discountValue" class="form-label">Discount Value</label>
                    <input type="number" class="form-control" name="discountValue" id="discountValue" required>
                </div>

                <div class="mb-3">
                    <label for="expiry" class="form-label">Expiry Date</label>
                    <input type="date" class="form-control" name="expiry" id="expiry" required>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-success">Add Coupon</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>

</div>