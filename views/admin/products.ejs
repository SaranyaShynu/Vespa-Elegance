

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Vespa Elegance</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/admin.css">
  <style>
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { border: 1px solid #ddd; padding: 12px; text-align: center; }
    th { background-color: #f4f4f4; }
    img { width: 80px; height: auto; border-radius: 8px; }
    .btn { padding: 6px 12px; border-radius: 4px; text-decoration: none; margin: 2px; }
    .btn-edit { background: #9c5b9c; color: white; }
    .btn-delete { background: #f44336; color: white; }
  </style>
</head>
<body>

  <%- include("partials/admin/header") %>
  <div class="admin-container">
    <%- include("partials/admin/sidebar") %>

    <main class="admin-main dashboard-main">
      <h1>Product Management</h1>
      <a href="/admin/add-product" class="btn btn-edit">+ Add Product</a>

      <table>
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Color</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (product.length > 0) { %>
            <% product.forEach(product => { %>
              <tr>
                <td>
                  <% if (product.images && product.images.length > 0) { %>
                    <img src="/images/<%= product.images[0] %>" alt="<%= product.name %>" style="height: 60px;"/>
                  <% } else { %>
                    <span>No Image</span>
                  <% } %>
                </td>
                <td><%= product.name %></td>
                <td><%= product.category %></td>
                <td>â‚¹ <%= product.price %></td>
                <td><%= product.color %></td>
                <td><%= product.status %></td>
                <td>
                 <!--<a href="/admin/products/edit/<%= product._id %>" class="btn btn-edit">Edit</a> -->

                 <button class="btn btn-primary btn-sm" 
        onclick="openEditModal('<%= product._id %>', '<%= product.name %>', <%= product.price %> , '<%= product.color %>', `<%= product.description %>`)">
  Edit
</button>

                  <form action="/admin/products/delete/<%= product._id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-delete">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="7">No products available</td></tr>
          <% } %>
        </tbody>
      </table>
    </main>
  </div>
  <%- include("partials/admin/footer") %>

  <div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form id="editProductForm" enctype="multipart/form-data" method="POST">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editProductModalLabel">Edit Product</h5> 
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
         </div>
         <div class="modal-body">
          <input type="hidden" name="id" id="edit-id">
          <div class="mb-3">
            <label for="edit-name" class="form-label">Name</label>
            <input type="text" name="name" id="edit-name" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="edit-price" class="form-label">Price</label>
            <input type="number" name="price" id="edit-price" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="edit-color" class="form-label">Color</label>
            <input type="text" name="color" id="edit-color" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="edit-description" class="form-label">Description</label>
            <textarea name="description" id="edit-description" class="form-control" required>
            </textarea>
          </div>
         </div>
         <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save Changes</button>
         </div>
        </div>
      </form>
    </div> 
  </div>

<script>
  function openEditModal(id, name, price, color, description) {
    document.getElementById('edit-id').value = id;
    document.getElementById('edit-name').value = name;
    document.getElementById('edit-price').value = price;
    document.getElementById('edit-color').value = color;
    document.getElementById('edit-description').value = description;
    
    // Set form action
    document.getElementById('editProductForm').action = `/admin/products/edit/${id}`;
    
    // Show modal
    var myModal = new bootstrap.Modal(document.getElementById('editProductModal'));
    myModal.show();
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
