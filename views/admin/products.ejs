<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Vespa Elegance</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin.css">
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th,
    td {
      border: 1px solid #ddd;
      padding: 12px;
      text-align: center;
    }

    th {
      background-color: #f4f4f4;
    }

    img {
      width: 80px;
      height: auto;
      border-radius: 8px;
    }

    .btn {
      padding: 6px 12px;
      border-radius: 4px;
      text-decoration: none;
      margin: 2px;
    }

    .btn-edit {
      background: #9c5b9c;
      color: white;
    }

    .btn-delete {
      background: #f44336;
      color: white;
    }
  </style>
</head>

<body>
  <%- include("../partials/admin/header") %>
  <div class="admin-container">
    <%- include("../partials/admin/sidebar") %>
    <main class="admin-main dashboard-main">
      <h1>Product Management</h1>
      <a href="/admin/add-product" class="btn btn-edit">+ Add Product</a>

      <table>
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Color</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (product.length > 0) { %>
            <% product.forEach(product => { %>
              <tr>
                <td>
                  <% if (product.images && product.images.length > 0) { %>
                    <div style="display:flex; gap:5px; flex-wrap:wrap;">
                      <% product.images.forEach(img => { %>
                        <img src="/images/<%= img %>" alt="<%= product.name %>"
                          style="height: 60px; width:auto; border-radius:4px;" />
                      <% }) %>
                    </div>
                  <% } else { %>
                    <span>No Image</span>
                  <% } %>
                </td>
                <td><%= product.name %></td>
                <td><%= product.category %></td>
                <td>â‚¹ <%= product.price %></td>
                <td><%= product.color %></td>
                <td><%= product.status %></td>
                <td>
                  <div style="display: flex; gap: 8px; align-items: center;">
                    <button class="btn btn-primary btn-sm"
                      onclick='openEditModal(
                        "<%= product._id %>",
                        "<%= (product.name || "").replace(/"/g,"&quot;") %>",
                        <%= product.price %>,
                         "<%= Array.isArray(product.color) ? product.color.join(', ') : (product.color || "") %>",
                        "<%= (product.description || "").replace(/"/g,"&quot;") %>",
                        "<%= (product.subCategory || "").replace(/"/g,"&quot;") %>",
                        <%- JSON.stringify(product.images || []) %>
                      )'>
                      Edit
                    </button>

                    <form action="/admin/products/delete/<%= product._id %>" method="POST" style="margin:0;">
                      <button type="submit" class="btn btn-delete btn-sm">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7">No products available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </main>
  </div>

  <%- include("../partials/admin/footer") %>

  <!-- Edit Product Modal -->
  <div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
      <form id="editProductForm" enctype="multipart/form-data" method="POST">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editProductModalLabel">Edit Product</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <input type="hidden" name="id" id="edit-id">

            <div class="mb-3">
              <label for="edit-name" class="form-label">Name</label>
              <input type="text" name="name" id="edit-name" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="edit-subcategory" class="form-label">Sub Category</label>
              <input type="text" name="subCategory" id="edit-subcategory" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="edit-price" class="form-label">Price</label>
              <input type="number" name="price" id="edit-price" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="edit-color" class="form-label">Color</label>
              <input type="text" name="color" id="edit-color" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="edit-description" class="form-label">Description</label>
              <textarea name="description" id="edit-description" class="form-control" required></textarea>
            </div>

            <!-- Current Images -->
            <div id="current-images" style="display:flex; gap:5px; flex-wrap:wrap;"></div>

            <!-- Hidden input to track remaining images -->
            <input type="hidden" name="existingImages" id="existingImages">

            <!-- Upload New Images -->
            <div class="mb-3">
              <label for="edit-images" class="form-label">Upload New Images</label>
              <input type="file" name="images" id="edit-images" class="form-control" multiple>
              <small class="text-muted">Upload new images to replace existing ones.</small>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- Script to dynamically load images in modal -->
  <script>
    function openEditModal(id, name, price, color, description, subCategory, images) {
      document.getElementById('edit-id').value = id;
      document.getElementById('edit-name').value = name;
      document.getElementById('edit-subcategory').value = subCategory;
      document.getElementById('edit-price').value = price;
      document.getElementById('edit-color').value = color;
      document.getElementById('edit-description').value = description;

      document.getElementById('editProductForm').action = `/admin/products/edit/${id}`;

      // Load current images dynamically
      const currentImagesDiv = document.getElementById('current-images');
      currentImagesDiv.innerHTML = '';

      if (images && images.length > 0) {
        images.forEach(img => {
          const container = document.createElement('div');
          container.style.position = 'relative';
          container.style.display = 'inline-block';
          container.style.marginRight = '5px';

          const imageEl = document.createElement('img');
          imageEl.src = `/images/${img}`;
          imageEl.style.height = '60px';
          imageEl.style.width = 'auto';
          imageEl.style.borderRadius = '4px';

          const removeBtn = document.createElement('button');
          removeBtn.type = 'button';
          removeBtn.innerText = 'x';
          removeBtn.style.position = 'absolute';
          removeBtn.style.top = '-5px';
          removeBtn.style.right = '-5px';
          removeBtn.style.width = '20px';
          removeBtn.style.height = '20px';
          removeBtn.style.fontSize = '12px';
          removeBtn.style.padding = '0';
          removeBtn.style.borderRadius = '50%';
          removeBtn.style.background = '#f44336';
          removeBtn.style.color = '#fff';
          removeBtn.style.border = 'none';
          removeBtn.style.cursor = 'pointer';
          removeBtn.onclick = () => {
            container.remove();
            updateExistingImages();
            };

          container.appendChild(imageEl);
          container.appendChild(removeBtn);
          currentImagesDiv.appendChild(container);
        });
      } else {
        currentImagesDiv.innerHTML = '<span>No images</span>';
      }

      // Initialize hidden input
    updateExistingImages();

      const myModal = new bootstrap.Modal(document.getElementById('editProductModal'));
      myModal.show();
    }

      // Hidden input updater
  function updateExistingImages() {
    const images = [];
    document.querySelectorAll('#current-images img').forEach(img => {
      images.push(img.src.split('/').pop());
    });
    document.getElementById('existingImages').value = JSON.stringify(images);
  }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

