<aside class="admin-sidebar">
  <style>
     * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background: #f8f9fa;
    }

    /* Header */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 60px; /* header height */
      background: #222;
      color: #fff;
      display: flex;
      align-items: center;
      padding: 0 20px;
      z-index: 1100;
    }

    .header h1 {
      font-size: 20px;
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      top: 60px; /* below header */
      left: 0;
      width: 220px; /* sidebar width */
      height: calc(100% - 60px); /* full height minus header */
      background: #111;
      color: #fff;
      padding-top: 20px;
      overflow-y: auto;
      z-index: 1000;
    }

    .sidebar a {
      display: block;
      padding: 12px 20px;
      color: #ddd;
      text-decoration: none;
      font-size: 15px;
    }

    .sidebar a:hover {
      background: #333;
      color: #fff;
    }

    .sidebar .logout {
      position: absolute;
      bottom: 20px;
      width: 100%;
      border-top: 1px solid #333;
    }

    /* Main content */
    .main-content {
      margin-left: 220px; /* same as sidebar width */
      margin-top: 60px;   /* same as header height */
      padding: 20px;
      min-height: calc(100vh - 60px);
      background: #e9c1e2;
    }
  </style>
  <nav>
    <ul class="menu-list">
      <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
      <li><a href="/admin/users"><i class="fas fa-users"></i> Users</a></li>
      <li><a href="/admin/category"><i class="fas fa-tags"></i> Categories</a></li>
      <li><a href="/admin/products"><i class="fas fa-plus"></i> Products</a></li>
      <li><a href="/admin/service"><i class="fas fa-tools"></i> Services</a></li>
      <li><a href="/admin/orders"><i class="fas fa-box"></i> Orders</a></li>
      <li><a href="/admin/coupons"><i class="fas fa-ticket-alt"></i> Coupons</a></li>
      <li><a href="/admin/feedback"><i class="fas fa-chart-line"></i> Reports</a></li>
      <li><a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a></li>
    </ul>

    <!-- Sidebar widgets -->
    <div class="sidebar-section">
      <h3>Online Users</h3>
      <ul id="onlineUsersList"></ul>
      <hr>
      <h3>Chat Messages</h3>
      <ul id="adminMessages"></ul>
    </div>

    <!-- Logout at bottom -->
    <div class="sidebar-footer">
      <a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
  </nav>
</aside>




