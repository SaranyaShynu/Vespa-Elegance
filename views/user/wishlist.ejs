<!DOCTYPE html>
<html lang="en">
<head>
  <title>My Wishlist - Vespa Elegance</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700">
  <link rel="stylesheet" href="/fonts/icomoon/style.css">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/owl.carousel.min.css">
  <link rel="stylesheet" href="/css/owl.theme.default.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    .model-card {
      background: #fff;
      border-radius: 12px;
      overflow: hidden;
      transition: all 0.3s ease;
      display: flex;
      flex-direction: column;
      height: 100%;
    }
    .model-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }
    .model-image {
      width: 100%;
      height: 329px;
      overflow: hidden;
    }
    .model-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      display: block;
    }
    .model-info {
      padding: 16px;
      flex: 1;
      text-align: center;
    }
    .model-title {
      font-size: 1.2rem;
      margin-bottom: 8px;
    }
    .wishlist-icon {
      font-size: 22px;
      cursor: pointer;
      color: red;
      transition: transform 0.2s ease;
    }
    .wishlist-icon:hover {
      transform: scale(1.2);
    }
  </style>
</head>
<body>
  <div class="site-wrap">
    <%- include("../partials/user/header") %>

    <div class="container my-5">
      <h2 class="text-center mb-4">My Wishlist</h2>
      <div class="row">
        <% if (wishlist && wishlist.products.length > 0) { %>
          <% wishlist.products.forEach(item => { %>
            <div class="col-sm-6 col-lg-4 mb-4">
              <div class="model-card shadow-sm rounded">
                <figure class="model-image">
                  <% if(item.productId && item.productId.images && item.productId.images.length > 0){ %>
                    <img src="/images/<%= item.productId.images[0] %>" alt="<%= item.productId.name %>">
                  <% } else { %>
                    <div style="width:100%; height:240px; display:flex; align-items:center; justify-content:center; background:#f0f0f0; color:#888;">
                      No Image Available
                    </div>
                  <% } %>
                </figure>
                <div class="model-info">
                  <h5 class="model-title"><%= item.productId.name %></h5>
                  <p class="text-primary font-weight-bold">â‚¹ <%= item.productId.price %></p>

                  <!-- Heart icon for toggle -->
                  <i class="fa fa-heart wishlist-icon"
                     data-productid="<%= item.productId._id %>">
                    </i>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12 text-center">
            <p class="text-muted" style="text-align: center; font-size: 20px; margin-top: 30px; font-weight: 300;"><strong> wishlist is empty.</strong></p>
          </div>
        <% } %>
      </div>
    </div>

    <%- include("../partials/user/footer") %>
  </div>

  <script src="/js/jquery-3.3.1.min.js"></script>
  <script src="/js/popper.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>

  <script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".wishlist-btn").forEach(button => {
      button.addEventListener("click", async () => {
        const isLoggedIn = button.dataset.loggedin === "true";
        const modelId = button.dataset.modelId;

        if (!isLoggedIn) {
          window.location.href = "/login"; // redirect if not logged in
          return;
        }

        try {
          const res = await fetch(`/wishlist/toggle/${modelId}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" }
          });

          const data = await res.json();

          if (data.success) {
            if (data.action === "added") {
              button.classList.add("active");
            } else if (data.action === "removed") {
              button.classList.remove("active");
            }
          } else {
            console.error(data.message || "Something went wrong");
          }
        } catch (err) {
          console.error("Wishlist error:", err);
        }
      });
    });
  });
</script>

</body>
</html>
