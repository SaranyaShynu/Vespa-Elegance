<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Vespa Elegance</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f4f4f4;
        }

        img {
            width: 80px;
            height: auto;
            border-radius: 8px;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 4px;
            text-decoration: none;
            margin: 2px;
        }

        .btn-edit {
            background: #9c5b9c;
            color: white;
        }

        .btn-delete {
            background: #f44336;
            color: white;
        }
    </style>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <%- include("partials/admin/header") %>
        <div class="admin-container">
            <%- include("partials/admin/sidebar") %>

                <main class="admin-main dashboard-main">
                    <h1 class="text-center mb-4">User Management</h1>

                    <!-- Search -->
                    <form class="d-flex justify-content-center mb-4" method="get" action="/admin/users">
                        <input class="form-control w-50 me-2" type="text" name="search" placeholder="Search users..."
                            value="<%= search || '' %>">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </form>

                    <!-- User Table -->
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <% if (users && users.length> 0) { %>
                                    <% users.forEach((user, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 + (page - 1) * limit %>
                                            </td>
                                            <td>
                                                <%= user.name %>
                                            </td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                            <td>
                                                <% if(user.isBlocked) { %>
                                                    <span class="badge bg-danger">Blocked</span>
                                                    <% } else { %>
                                                        <span class="badge bg-success">Active</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <button
                                                    class="btn btn-<%= user.isBlocked ? 'success' : 'danger' %> btn-sm toggle-btn"
                                                    data-userid="<%= user._id %>" data-status="<%= user.isBlocked %>">
                                                    <%= user.isBlocked ? 'Unblock' : 'Block' %>
                                                </button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5">No users found.</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </main>
        </div>

        <!-- Pagination -->
        <nav class="d-flex justify-content-center">
            <ul class="pagination">
                <% for (let i=1; i <=totalPages; i++) { %>
                    <li class="page-item <%= page === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>&search=<%= search || '' %>">
                            <%= i %>
                        </a>
                    </li>
                    <% } %>
            </ul>
        </nav>
        </div>
        <%- include("partials/admin/footer") %>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

        <!-- SweetAlert + AJAX Block Toggle -->
        <script>
            document.querySelectorAll('.toggle-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const userId = this.getAttribute('data-userid');
                    const currentStatus = this.getAttribute('data-status') === 'true';
                    const action = currentStatus ? 'unblock' : 'block';

                    Swal.fire({
                        title: `Are you sure you want to ${action} this user?`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: currentStatus ? '#198754' : '#d33',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: `Yes, ${action}`
                    }).then((result) => {
                        if (result.isConfirmed) {
                            fetch(`/admin/users/${userId}/block`, {
                                method: 'PATCH',
                                headers: { 'Content-Type': 'application/json' }
                            })
                                .then(res => res.json())
                                .then(data => {
                                    if (data.success) {
                                        Swal.fire(`${action.charAt(0).toUpperCase() + action.slice(1)}ed!`, data.message, 'success')
                                            .then(() => {
                                                location.reload();
                                            });
                                    } else {
                                        Swal.fire('Error!', data.message, 'error');
                                    }
                                });
                        }
                    });
                });
            });
        </script>
</body>

</html>