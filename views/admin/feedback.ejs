<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Vespa Elegance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/admin.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f4f4f4;
        }

        img {
            width: 80px;
            height: auto;
            border-radius: 8px;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 4px;
            text-decoration: none;
            margin: 2px;
        }

        .btn-edit {
            background: #9c5b9c;
            color: white;
        }

        .btn-delete {
            background: #f44336;
            color: white;
        }
    </style>
</head>

<body>

    <%- include("partials/admin/header") %>
        <div class="admin-container">
            <%- include("partials/admin/sidebar") %>

                <main class="admin-main dashboard-main">
                   <h1>User Feedback</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Email</th>
      <th>Message</th>
    </tr>
  </thead>
  <tbody>
    <% messages.forEach(msg => { %>
      <tr>
        <td><%= msg.name %></td>
        <td><%= msg.email %></td>
        <td><%= msg.message %></td>
        <td><%= msg.createdAt.toLocaleString() %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

                </main>
        </div>
        <%- include("partials/admin/footer") %>
</body>

</html>