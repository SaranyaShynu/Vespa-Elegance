<!DOCTYPE html>
<html lang="en">
<head>
  <title>Vespa Elegance â€” e-Commerce Platform</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Fonts & Icons -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700">
  <link rel="stylesheet" href="fonts/icomoon/style.css">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Vendor CSS -->
  <link rel="stylesheet" href="css/magnific-popup.css">
  <link rel="stylesheet" href="css/jquery-ui.css">
  <link rel="stylesheet" href="css/owl.carousel.min.css">
  <link rel="stylesheet" href="css/owl.theme.default.min.css">
  <link rel="stylesheet" href="css/aos.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <!-- Header -->
  <%- include('../partials/user/header') %>

<div class="container mt-5">
  <h1>Feedback</h1>

  <!-- Feedback form -->
  <form action="/user/feedback" method="POST" class="mb-4">
    <input type="text" name="name" placeholder="Your Name" value="<%= user ? user.name : '' %>" required />
    <input type="email" name="email" placeholder="Your Email" value="<%= user ? user.email : '' %>" required />
    <textarea name="message" placeholder="Your Message" required style="height:33px; vertical-align:top;"></textarea>
    <button type="submit">Send</button>
  </form>

  <!-- Show previous feedbacks -->
  <h3>Your Previous Feedback</h3>
  <table border="1" cellpadding="10" cellspacing="0" style="width:100%; text-align:left; margin-top:20px;">
    <thead>
      <tr>
        <th>Date</th>
        <th>Message</th>
        <th>Admin Response</th>
      </tr>
    </thead>
    <tbody>
      <% if (feedbacks.length === 0) { %>
        <tr>
          <td colspan="3">No feedback yet.</td>
        </tr>
      <% } else { %>
        <% feedbacks.forEach(fb => { %>
          <tr>
            <td><%= fb.createdAt.toLocaleString() %></td>
            <td><%= fb.message %></td>
            <td><%= fb.response && fb.response.trim() !== "" ? fb.response : "Pending" %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

 <!-- Footer -->
  <%- include('../partials/user/footer') %>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

