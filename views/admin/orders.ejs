<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Vespa Elegance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/admin.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f4f4f4;
        }

        img {
            width: 80px;
            height: auto;
            border-radius: 8px;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 4px;
            text-decoration: none;
            margin: 2px;
        }

        .btn-edit {
            background: #9c5b9c;
            color: white;
        }

        .btn-delete {
            background: #f44336;
            color: white;
        }
    </style>
</head>

<body>

    <%- include("../partials/admin/header") %>
        <div class="admin-container">
            <%- include("../partials/admin/sidebar") %>

                <main class="admin-main dashboard-main">
                    <h1>All Orders</h1>
                    <% if (message) { %>
                        <div class="alert alert-<%= type %> mt-3">
                            <%= message %>
                        </div>
                        <% } %>

                            <table border="1" width="100%" cellpadding="10" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>User</th>
                                        <th>Amount</th>
                                        <th>Payment Method</th>
                                        <th>Payment Status</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (orders.length> 0) { %>
                                        <% orders.forEach(order=> { %>
                                            <tr>
                                                <td>
                                                    <%= order.orderId %>
                                                </td>
                                                <td>
                                                    <%= order.user?.email || 'N/A' %>
                                                </td>
                                                <td>â‚¹<%= order.price %>
                                                </td>
                                                <td>
                                                    <%= order.paymentMethod %>
                                                </td>
                                                <td>
                                                    <%= order.paymentStatus %>
                                                </td>
                                                <td>
                                                    <form action="/admin/orders/<%= order._id %>/status" method="POST">
                                                        <select name="orderStatus">
                                                            <option value="Processing" <%=order.orderStatus==='Processing'
                                                                ? 'selected' : '' %>>Processing</option>
                                                            <option value="Shipped" <%=order.orderStatus==='Shipped'
                                                                ? 'selected' : '' %>>Shipped</option>
                                                            <option value="Delivered" <%=order.orderStatus==='Delivered'
                                                                ? 'selected' : '' %>>Delivered</option>
                                                            <option value="Cancelled" <%=order.orderStatus==='Cancelled'
                                                                ? 'selected' : '' %>>Cancelled</option>
                                                        </select>
                                                        <button type="submit">Update</button>
                                                    </form>
                                                </td>
                                                <td>
                                                    <%= order.createdAt.toDateString() %>
                                                </td>
                                                <td>
                                                    <a href="/admin/orders/<%= order._id %>"
                                                        style="margin-right: 5px;">View</a>
                                                    <form action="/admin/orders/<%= order._id %>/delete" method="POST"
                                                        style="display:inline;">
                                                        <button type="submit"
                                                            onclick="return confirm('Are you sure you want to delete this order?')">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="8">No orders found.</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                </main>
        </div>
        <%- include("../partials/admin/footer") %>
</body>

</html>